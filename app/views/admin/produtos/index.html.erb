  </tr>

<% @produtos.each do |produto| %>
  <tr>
    <td><%= produto.nome %></td>
    <td><%= produto.valor %></td>
    <td><%= link_to 'Show', admin_produto_path(produto) %></td>
    <td><%= link_to 'Edit', edit_admin_produto_path(produto) %></td>
    <td><%= link_to 'Destroy', admin_produto_path(produto), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

